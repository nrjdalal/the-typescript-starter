{
  "name": "the-typescript-starter",
  "version": "0.0.0",
  "description": "the-typescript-starter",
  "keywords": [],
  "homepage": "https://github.com/nrjdalal/the-typescript-starter#readme",
  "bugs": "https://github.com/nrjdalal/the-typescript-starter/issues",
  "repository": "nrjdalal/the-typescript-starter",
  "funding": "https://github.com/sponsors/nrjdalal",
  "license": "MIT",
  "author": {
    "name": "Neeraj Dalal",
    "email": "admin@nrjdalal.com",
    "url": "https://nrjdalal.com"
  },
  "type": "module",
  "exports": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": "./dist/bin/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "bin": "tsdown && node dist/bin/index.mjs",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "prepare": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "package.json": "sort-package-json"
  },
  "prettier": {
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "semi": false
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/node": "^22.19.1",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "sort-package-json": "^3.4.0",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3"
  }
}
